    "calcPi = 3\n",
    "counts = 100000\n",
    "a = True\n",
    "\n",
    "for i in range(2, counts, 2):\n",
    "    tem = 4/(i*(i+1)*(i+2))\n",
    "    if a:\n",
    "        calcPi = calcPi + tem\n",
    "    else:\n",
    "        calcPi = calcPi - tem\n",
    "    a = not a\n",
    "\n",
    "print('{0:.15f}'.format(calcPi))"
   ]
  }
